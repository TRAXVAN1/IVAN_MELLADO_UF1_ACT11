<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom"
            android:textSize="30sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etNom"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="Introdueix el teu nom"
            android:padding="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cognom"
            android:textSize="30sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etCognom"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="Introdueix el teu cognom"
            android:padding="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edat"
            android:textSize="30sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etEdat"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:inputType="number"
            android:hint="Introdueix la teva edat"
            android:padding="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gènere"
            android:textSize="30sp"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/radioGroupGènere"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButtonMasculí"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masculí" />

            <RadioButton
                android:id="@+id/radioButtonFemení"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Femení" />

            <RadioButton
                android:id="@+id/radioButtonAltres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Altres" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telèfon"
            android:textSize="30sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etTelefon"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:inputType="phone"
            android:hint="Introdueix el teu telèfon"
            android:padding="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="30sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:inputType="textEmailAddress"
            android:hint="Introdueix el teu email"
            android:padding="10dp" />

        <Button
            android:id="@+id/btnEnviar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enviar"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnCanviActivitat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Canvi de Activitat"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:textSize="30sp" />
    </LinearLayout>
</ScrollView>
